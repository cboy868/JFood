<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
"http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    
 <!--加载配置⽂件，为下⾯读取数据库信息准备-->
    <properties resource="application.properties"/>

    <!--defaultModelType="flat" ⼤数据字段，不分表 -->
    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="autoDelimitKeywords" value="true" />
        <property name="beginningDelimiter" value="`" />
        <property name="endingDelimiter" value="`" />
        <property name="javaFileEncoding" value="utf-8" />
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin" />
        <!-- 注释 -->
        <commentGenerator >
            <property name="suppressAllComments" value="true"/><!-- 是否取消注释 -->
            <property name="suppressDate" value="true" /> <!-- 是否⽣成注释代时间戳-->
        </commentGenerator>
        <!--数据库链接地址账号密码-->
        <jdbcConnection driverClass="${spring.datasource.driver-class-name}" 
        connectionURL="${spring.datasource.url}" 
        userId="${spring.datasource.username}" 
        password="${spring.datasource.password}"></jdbcConnection>

        <!-- 类型转换 -->
        <javaTypeResolver>
            <!-- 是否使⽤bigDecimal， false可⾃动转化以下类型（Long, Integer, Short,
            etc.） -->
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!--⽣成Model类存放位置-->
        <javaModelGenerator targetPackage="com.xueda.food.material.model" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- ⽣成map xml⽂件 -->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources/mapper/material" >
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!-- ⽣成mapxml对应client，也就是接⼝dao -->
        <javaClientGenerator targetPackage="com.xueda.food.material.dao" targetProject="src/main/java" type="XMLMAPPER" >
            <property name="enableSubPackages" value="false" />
        </javaClientGenerator>

        <table tableName="material" schema="INNODB" enableCountByExample="false" 
        enableUpdateByExample="false" enableDeleteByExample="false" enableSelectByExample="false" 
        selectByExampleQueryId="false">
            <property name="id" value=""/>
            <property name="name" value=""/>
            <property name="category_id" value=""/>
            <property name="cover"  value=""/>
            <property name="intro" value="" />
        </table>

    </context>
</generatorConfiguration>